{
    "version": "2",
    "builds": [
        {
            "src": "faq_project/wsgi.py",
            "use": "@vercel/python",
            "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
        },
        {
            "src": "build_files.sh",
            "use": "@vercel/static-buld",
            "config": { "distDir": "staticfiles_build" }
        }
    ],

    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "faq_project/wsgi.py"
        }
    ]
}
